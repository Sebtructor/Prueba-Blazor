@inject ILogger<LoginTemplate> _logger

<HeadContent>
    <link rel="preconnect" href="https://fonts.gstatic.com/">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:300,400,500,600,700,800,900&amp;display=swap" rel="stylesheet">
    <link href="assetsLogin/vendors/simplebar/simplebar.min.css" rel="stylesheet">
    <link href="assetsLogin/assets/css/theme-rtl.min.css" rel="stylesheet" id="style-rtl">
    <link href="assetsLogin/assets/css/theme.min.css" rel="stylesheet" id="style-default">
    <link href="assetsLogin/assets/css/user-rtl.min.css" rel="stylesheet" id="user-style-rtl">
    <link href="assetsLogin/assets/css/user.min.css" rel="stylesheet" id="user-style-default">

    <script src="assetsLogin/vendors/popper/popper.min.js"></script>
    <script src="assetsLogin/vendors/bootstrap/bootstrap.min.js"></script>
    <script src="assetsLogin/vendors/anchorjs/anchor.min.js"></script>
